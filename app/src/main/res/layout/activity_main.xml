<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@drawable/bc2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="assalaam.calculator.id.projectassalaam.MainActivity">

    <ImageButton
        android:id="@+id/logoass"
        android:background="@drawable/logoass"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/logoinfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <ImageButton
        android:id="@+id/logoinfo"
        android:background="@drawable/info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="KOMPONEN-KOMPONEN TKR"
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/logoinfo"
        android:layout_alignStart="@+id/logoinfo"
        android:layout_marginTop="37dp" />

    <Button
        android:id="@+id/komponen"
        android:text="KOMPONEN"
        android:background="@drawable/button1"
        android:textSize="10pt"
        android:layout_width="185dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
